<!DOCTYPE html>
<html>
  <head>
    <title>Clothing</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>

    <nav class = "nav navbar navbar-inverse shift ">
      <a href="/"><span class="brand">Clothing</span> </a> |
      <%= link_to "Gallery", pictures_path %>
        <div class="pull-right shift">
        <% if current_user %>
          <span class="glyphicon glyphicon-ok-circle" aria-hidden="true"></span>
          <span class="white"><%= current_user.email %></span> |
          <%= link_to "Log-out", destroy_user_session_path, method: "delete" %>
        <% else %>
          <span class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span>
          <%= link_to "Log-in", new_user_session_path %></a> |
          <%= link_to "Signup", new_user_registration_path %></a>
        <% end %>
      </div>
    </nav>
    <div class="container">
      <%= flash[:notice] %>
      <%= yield %>
    </div>

  </body>
</html>
