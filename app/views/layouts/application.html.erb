<!DOCTYPE html>
<html>
  <head>
    <title>Clothing</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name ="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
  </head>
  <body>
      <div class="container">
<div class="row">


<div class="col-sm-12 col-md-6">
    <nav class = "navbar-custom shift">
      <a href="/"><span class="logo">Clothing</span> </a>

    </div> <!-- col end -->
  <div class="col-sm-12 col-md-6">
        <div class="pull-right shift login-text navbar-custom ">
        <% if current_user %>
          <span class="glyphicon glyphicon-ok-circle" aria-hidden="true"></span>
          <span class="white"><%= current_user.username %></span> |
          <%= link_to "Logout", destroy_user_session_path, method: "delete" %>
        <% else %>
          <span class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span>
          <%= link_to "Log-in", new_user_session_path %></a> |
          <%= link_to "Signup", new_user_registration_path %></a>
        <% end %>
      </div> <!-- login end -->
    </nav>
  </div> <!-- col end -->
      <%= flash[:notice] %>
      <%= yield %>
      <div class="col-sm-12">
          <div class="control-panel control-text">
            <div class="img-responsive">
            <%= link_to "Home", root_path %>
            <%= link_to image_tag("button.png", :class => "button"), new_picture_path %>
            <%= link_to "Fav", pictures_path %>
            <%= link_to "Closet", pictures_path %>
          </div>
        </div><!-- control panel end -->
      </div> <!-- col end -->
      </div> <!-- row end -->
    </div><!-- container end -->
  </body>
</html>
