<div class="col-sm-12">
  <h3 class="center">Sign up
    <span class="center"><%= devise_error_messages! %></span></h3>
  <div class="well">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username, autofocus: true, :class => 'form-control input-lg' %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, :class => 'form-control input-lg' %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", :class => 'form-control input-lg' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control input-lg' %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", :class => "btn-lg btn-primary" %>
  </div>
<% end %>


<%= render "devise/shared/links" %>
</div>
</div>
