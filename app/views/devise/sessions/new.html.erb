<div class="col-sm-12">

<div class="">
  <div class="tutorial">
    <h3>Welcome!</h3>
    <h4>In order to continue please Login or Create Account!</h4>
  </div>
</div>

  <h2 class="center">Log in</h2>
  <div class="form well">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.email_field :email, autofocus: true, :class => "form-control input-lg", :placeholder => "Email"%>
      </div>
      <div class="field">
        <%= f.password_field :password, autocomplete: "off", :class => "form-control input-lg", :placeholder => "Password" %>
      </div>
      <% if devise_mapping.rememberable? -%>
        <div class="field form-text-small">
          <%= f.check_box :remember_me, :class => "big-checkbox" %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>
      <div class="actions center">
        <%= f.submit "Log in", :class => "btn-lg btn-primary" %>
      </div>
    <% end %>
    <div class="form-text-small center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
