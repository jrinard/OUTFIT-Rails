

<div class="col-sm-12 col-md-6">

  <%= render "form-details" %>

<div class="well">
  <div class="pull-right pink">
    <%= link_to "Delete Picture", picture_path(@picture), :class => "btn-lg",:data => {:confirm => "Are you sure?",:method => "delete"}, remote: true  %>
  </div>
  <div id="details">
    <% if @picture.body != "" %>
      <span class="type">Body:</span> <span class="detail"><%= @picture.body %></span><br>
    <% end %>
    <% if @picture.legs != ""  %>
      <span class="type">Legs:</span> <span class="detail"> <%= @picture.legs %></span><br>
    <% end %>
    <% if @picture.feet != "" %>
      <span class="type">Feet:</span> <span class="detail"> <%= @picture.feet %></span><br>
    <% end %>
    <% if @picture.hands != "" %>
      <span class="type">Hands:</span> <span class="detail"> <%= @picture.hands %></span><br>
    <% end %>
    <% if @picture.head != "" %>
      <span class="type">Head:</span> <span class="detail"> <%= @picture.head %></span><br>
    <% end %>
    <% if @picture.extra != "" %>
      <span class="type">Extra:</span> <span class="detail"> <%= @picture.extra %></span><br>
    <% end %>
  </div><!-- detail end -->
</div><!-- well end -->

<div class="well">
  <div class="pull-right teal">
    <%= link_to "Add Event", new_picture_event_path(@picture), :class => "btn-lg" %>
  </div>
      <% if @picture.events.any? %>
        <% @picture.events.each do |event| %>
        <div class="teal btn">
          <%= link_to event.name, picture_event_path(@picture, event.id), :class => "btn-lg" %> 

      <div class="pink btn">
        <%= link_to "Delete", picture_event_path(@picture, event.id), :class => "btn", :data => {:confirm => "Are you sure?",:method => "delete"}%>

      <div class="blue btn ">
        <%= link_to "Rename", edit_picture_event_path(@picture, event.id), :class => "btn" %> <br>
      </div><!-- blue end -->
  </div><br> <!-- pink end -->
</div><br><!-- Teal end -->
  <br><br>
        <% end %>
        <% else %>
        <p>
          No events
        </p>
      <% end %>


</div>

</div> <!-- col end -->
<hr>

<div class="col-sm-12">
<div class="well">


Title: <%= @picture.title %><br>
Task Id: <%= @task_id %>


<% if @details%>
<%# @details['task']['data']['boxes'].to_a[0][0]%><br><br>

<% if @details['task']['data'] %>
  <% @test = @details['task']['data']['boxes'].map %><br><br>
  <%= @test.each do |k| %>
    <%= k.to_a[0] %><br>
  <% end %>
  <% else %>
  Fashion needs to be attached to analyze it
<% end %>
<% end %>

<hr>
<%= link_to "Task", :get_task => "Get_Task", :class => "btn" %>
<%= link_to "Analyze", :get_details => "AnalyzePhoto", :class => "btn" %>
<hr>
<h4>
<%= @details%><br>
</h4>

</div>
</div>
