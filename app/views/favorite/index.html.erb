<div class="col-xs-12">
  <div class="flex-container">
    <div class="flex-block">

      <h3>Favorites</h3>

        <% if @pictures.any? %>
          <% @pictures.each do |picture| %>
          <div class="col-xs-6">
            <div class="well">
            <%= image_tag picture.image, :class => "image-size img-responsive round" %>

          <div id="block1">
            <span class="month"><%= picture.created_at.strftime("%b") %></span>
            <span class="day"><%= picture.created_at.strftime("%d") %></span>

            <div class="title"><%= picture.title %></div>
            <div class="description"><%= picture.description %></div>
          </div>

          <div id="block2">
            <%= link_to image_tag("btn-fav-grey.png"), {:unfav => picture.id} %>
            <!-- <span class="vote-number"><%= picture.get_likes.size %></span> -->
            <%= link_to image_tag("btn-edit.png", :class => "btn marginL edit-button"), picture_path(picture) %>
          </div>

          <div id="block-bottom">
              <%# link_to "Show Details", :class => "center  btn", :showdetail => "showdetail" %>
               <!-- <button class="toggle btn">Details</button> -->
            <span class="time"><%# time_ago_in_words(picture.created_at) %></span>
          </div>

        <% if @showdetail === true %>
          <div id="details">
            <hr>
            <% if picture.body != "" %>
              <span class="type">Body:</span> <span class="detail"><%= picture.body %></span><br>
            <% end %>
            <% if picture.legs != ""  %>
              <span class="type">Legs:</span> <span class="detail"> <%= picture.legs %></span><br>
            <% end %>
            <% if picture.feet != "" %>
              <span class="type">Feet:</span> <span class="detail"> <%= picture.feet %></span><br>
            <% end %>
            <% if picture.hands != "" %>
              <span class="type">Hands:</span> <span class="detail"> <%= picture.hands %></span><br>
            <% end %>
            <% if picture.head != "" %>
              <span class="type">Head:</span> <span class="detail"> <%= picture.head %></span><br>
            <% end %>
          </div><!-- detail end -->
        <% end %><!-- showdetail end -->

        </div><!-- well end -->
        </div><!-- col end -->
           <% end %>
             <% else %>
             <div class="center grey"><br><br>
                <h4>You have no favorites yet! <br> While viewing your outfits select
                <%= image_tag("btn-fav-tut.png", :id => "fav-button", :class => "btn fav-button-tut")%>
                to add an outfit to this page!</h4>
             </div>
        <% end %>

    </div><!-- flex-block end -->
  </div><!-- flex-container end -->
</div><!-- col end -->
